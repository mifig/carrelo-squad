<%= simple_form_for message, data: { messages_target: "form", action: "submit->messages#sendMessage" } do |f| %>
  <%= f.input :email, input_html: { class: "actor-form-input", style: "border-bottom: 1px solid black", placeholder: t("email_placeholder") } %>
  <%= f.input :subject, label: t("subject"), input_html: { class: "actor-form-input", style: "border-bottom: 1px solid black", placeholder: t("subject_placeholder") } %>
  <%= f.input :content, label: t("message"), input_html: { class: "actor-form-input", style: "border-bottom: 1px solid black", placeholder: t("message_placeholder") } %>
  <%= f.button :submit, t("send"), class: "black-btn w-100" %>
<% end %>