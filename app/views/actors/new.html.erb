<div class="actor-show-container margin-top-show">
  <div class="actor-img-col d-flex justify-content-center align-items-center">
    <h1 class="fw-light">NOVO ACTOR</h1>
    <h3 class="fw-lighter">INFOS</h3>
  </div>
  <div class="actor-infos-col mt-5 px-5">
    <%= simple_form_for @actor do |f| %>
      <div class="d-flex">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
      </div>

      <div class="d-flex">
        <%= f.input :email, as: :email %>
        <%= f.input :phone_number, as: :tel %>
      </div>

      <%= f.input :bio %>

      <div class="d-flex">
        <%= f.input :height %>
        <%= f.input :hair %>
        <%= f.input :eyes %>
      </div>

      <div class="d-flex">
        <%= f.input :primary_photo, as: :file %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      </div>

      <%= f.input :cv, as: :file %>

      <%= f.submit "GUARDAR", class: "black-btn" %>
    <% end %>
  </div>
</div>