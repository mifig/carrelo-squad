<div class="actor-show-container margin-top-show" data-controller="actor">
  <div class="actor-img-col d-flex justify-content-center align-items-center" style="background: url(<%= cl_image_path @actor.primary_photo.key if @actor.primary_photo.attached? %>); background-position: center; background-size: cover; background-repeat: no-repeat;">
    <div class="text-center form-header">
      <h1 class="fw-light"><%= @actor.first_name.upcase %> <%= @actor.last_name.upcase %></h1>
      <h3 class="fw-lighter">LINKS</h3>
      <div class="form-steps mb-4 gap-2">
        <div class="form-step"></div>
        <div class="current-form-step"></div>
      </div>
      <div class="d-flex justify-content-center gap-5 mt-4">
        <%= link_to "← VOLTAR", edit_actor_path(@actor), class: "black-btn border-0" %>
        <button class="white-btn border-0" data-action="click->actor#sendForm">GUARDAR</button>
      </div>
    </div>
  </div>
  <div class="actor-infos-col form-white-bg pt-5 px-5">
    <%= simple_form_for [@actor, @link], data: { actor_target: "form" }  do |f| %>
      <%= f.input :url %>
    <% end %>
  </div>
</div>