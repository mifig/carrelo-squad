<div class="px-5 login-form">
  <h2 class="text-center py-4">ADMIN</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, input_html: { style: "border: 1px solid white" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <button type="submit" name="commit" value="LOG IN" class="white-btn w-100 border-0" data-disable-with="LOG IN">LOG IN</button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
